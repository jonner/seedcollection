{% extends "root.html.j2" %}
{% from "_macros.html.j2" import icon, breadcrumbs, filter_sort_widget %}
{% block title %}Add Samples to Project{% endblock %}
{% block content %}
{{ breadcrumbs([
{"name": "Home", "link": (app_prefix ~ "/") },
{"name": "Projects", "link": (app_prefix ~ "/project/list) },
{"name": project.id | idfmt("P"), "link": (app_prefix ~ "/project/" ~ project.id) },
{"name": "Add Samples", "active": true }]) }}
<h2>{{ self.title() }}</h2>
<p>Choose samples to add to the project <i>{{ project.name }}</i></p>
{{ filter_sort_widget((app_prefix ~ "/project/" ~ project.id ~ "/add"), "#sample-list", filter_spec)}}
{% if samples %}
<form id="project-add-form"
    hx-post="{{app_prefix}}/project/{{project.id}}/add"
    hx-swap="none">
    <div id="sample-list"
    hx-trigger="reload-samples from:body"
    hx-get
    hx-swap="innerHTML"
    class="mb-3"
    >
      {{ show_samples(samples) }}
    </div>
    <div class="row sticky-bottom p-3">
        <div id="flash-messages" class="sticky-top"></div>
        <button type="submit" class="btn btn-primary">Add samples</button>
    </div>
</form>
{% else %}
<div class="alert alert-warning">No samples available to add. 
    <a href="{{app_prefix}}sample/new">Add a new sample to the database first</a>.
</div>
{% endif %}
{% endblock %}
{% endif %}
