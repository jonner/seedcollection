{% extends "root.html.j2" %}
{% from "_macros.html.j2" import breadcrumbs %}
{% from "_project_macros.html.j2" import allocation_note_form %}
{% block title %}Add a new note{% endblock %}
{% block content %}
{{ breadcrumbs([
{"name": "Home", "link": (app_prefix ~ "/" ) },
{"name": "Projects", "link": (app_prefix ~ "/project/list" ) },
{"name": project.id | idfmt("P"), "link": (app_prefix ~ "/project/" ~ project.id) },
{"name": allocation.sample.id | idfmt("S"), "link": (app_prefix ~ "/project/" ~ project.id ~ "/sample/" ~ allocation.id) },
{"name": "Add Note", "active": true },
]) }}
<h2>{{ self.title() }}</h2>
<div>Sample {{ allocation.sample.id | idfmt("S") }}: {{ allocation.sample.taxon.complete_name }}</div>
<div>Project {{ project.id | idfmt("P") }}: {{ project.name }}</div>
{{ allocation_note_form(allocation, message=message) }}
{% endblock %}

