{% extends "root.html.j2" %}
{% from "_macros.html.j2" import breadcrumbs %}
{% from "_project_macros.html.j2" import allocation_note_form %}
{% block title %}Edit Note {{ note.id }}{% endblock %}
{% block content %}
{{ breadcrumbs([
{"name": "Home", "link": ("/" | app_url) },
{"name": "Projects", "link": ("/project/list" | app_url) },
{"name": project.id | idfmt("P"), "link": ("/project/" ~ project.id) | app_url },
{"name": allocation.sample.id | idfmt("S"), "link": ("/project/" ~ project.id ~ "/sample/" ~ allocation.id) | app_url },
{"name": "Add Note", "active": true },
]) }}
<h2>{{ self.title() }}</h2>
<div>Sample {{ allocation.sample.id | idfmt("S") }}: {{ allocation.sample.taxon.complete_name }}</div>
<div>Project {{ project.id | idfmt("P") }}: {{ project.name }}</div>
{{ allocation_note_form(allocation, note=note, request=request, message=message) }}
{% endblock %}

